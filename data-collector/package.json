{
  "name": "cron-job",
  "version": "1.0.0",
  "description": "Cron job for API integration",
  "main": "app.js",
  "scripts": {
    "start-local": "ts-node -r dotenv/config src/index.ts dotenv_config_path=.env",
    "build": "rimraf ./build && tsc",
    "vectronic": "node build/vectronic.js",
    "lotek": "node build/lotek.js",
    "vendor-merge": "node build/vendor-merge.js",
    "data-collector": "node build/index.js",
    "ats": "node build/ats.js",
    "cypress": "cypress run -b chromium --headless",
    "cypress-headed": "cypress run -b chromium --no-exit",
    "watch": "tsc -w",
    "lint": "eslint . --ext .ts --no-error-on-unmatched-pattern",
    "lint:fix": "eslint . --fix --ignore-pattern 'node_modules' --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/bctw-api.git"
  },
  "keywords": [
    "cron",
    "job",
    "scheduler"
  ],
  "author": "Ronald Garcia",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bcgov/bctw-api/issues"
  },
  "homepage": "https://github.com/bcgov/bctw-api#readme",
  "dependencies": {
    "csvtojson": "^2.0.10",
    "dayjs": "^1.10.1",
    "execa": "^5.0.0",
    "fastq": "^1.17.1",
    "knex": "^2.4.2",
    "logform": "~2.3.2",
    "moment": "^2.29.4",
    "p-limit": "^6.1.0",
    "pg": "^8.3.0",
    "sql-template-strings": "^2.2.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/csvtojson": "^1.1.5",
    "@types/node": "^14.14.20",
    "@types/pg": "^7.14.7",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "axios": "^1.7.7",
    "dotenv": "^8.6.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^7.1.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.2.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
